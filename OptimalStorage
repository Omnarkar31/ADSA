import java.util.*;

public class OptimalStorage {

    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        System.out.print("Enter number of files: ");
        int n = sc.nextInt();

        int[] sizes = new int[n];

        System.out.println("Enter sizes of the files:");
        for (int i = 0; i < n; i++) {
            sizes[i] = sc.nextInt();
        }

        // Sort sizes in increasing order
        Arrays.sort(sizes);

        int totalRetrievalTime = 0;
        int cumulativeSum = 0;

        System.out.print("Optimal Order of files: ");
        for (int size : sizes) {
            System.out.print(size + " ");
        }

        System.out.println();

        // Calculate total retrieval time
        for (int i = 0; i < n; i++) {
            cumulativeSum += sizes[i];
            totalRetrievalTime += cumulativeSum;
        }

        System.out.println("Total Retrieval Time: " + totalRetrievalTime);
        sc.close();
    }
}
